algoritmo "semnome"

var

peso,altura, IMC: real

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreva ("Qual seu peso?")
leia(peso)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreva ("Qual sua altura?")
leia (altura)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

IMC <- peso /altura^2

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("O IMC é: ",IMC :5:2)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

se (IMC >= 18.5) e (IMC < 25) entao
   escreval ("Parabens! voce está no seu peso ideal!")
senao
   escreval ("Você não está no peso ideal")
fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo

