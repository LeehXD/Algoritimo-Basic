algoritmo "semnome"

var

numero, cont, s, maior, menor: inteiro

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

cont <- 1
s <- 0

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

enquanto (cont <= 5) faca   // Define quantas vezes o usuario terá que digitar

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   escreva ("Digite um numero:")
   leia(numero)

   se   (numero > maior) entao
      maior <- numero
   fimse

   se (cont = 1) entao
      menor <- numero
   senao
      se (numero < menor) entao
         menor <- numero
      fimse
   fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   s <- s+numero
   cont <- cont +1

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimenquanto

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("A soma de todos os valores é:",s)
escreval ("O maior numero digitado é:",maior)
escreval ("O menor numero digitado é:",menor)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo

