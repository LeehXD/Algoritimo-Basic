soma <- 0
resp <- 1

//////////////////////////////////////////

   escreval ("-------------------------------------")
   escreval ("Digite quantas vezes quer executar =>")
   escreval ("-------------------------------------")
   leia (quant)

//////////////////////////////////////////
   
enquanto (resp <= quant) faca

