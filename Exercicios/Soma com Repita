algoritmo "semnome"

var

numero, soma: inteiro
resp: caractere

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

soma <- 0

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

repita

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   escreval ("------------------")
   escreval ("DIGITE UM VALOR =>")
   escreval ("------------------")
   leia(numero)


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////  

   soma <- soma + numero

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////  

   escreval ("---------------------------------")
   escreval ("VOCÊ QUER CONTINUAR? [SIM OU NAO]")
   escreval ("---------------------------------")
   leia (resp)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
   
ate (resp = "NAO")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("---------------------------------")
escreval ("A SOMA DE TODOS OS VALORES É:", soma)
escreval ("---------------------------------")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo