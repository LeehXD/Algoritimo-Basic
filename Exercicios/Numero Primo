algoritmo "semnome"

var

contador, numero, contador_divisao: inteiro

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

contador <- 1

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("-----------------")
Escreval ("DIGITE UM NUMERO")
escreval ("-----------------")
leia (numero)
escreval ("-----------------")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Repita

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   escreval (contador)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   se (numero % contador = 0) entao

      contador_divisao <- contador_divisao + 1

   fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

contador <- contador + 1

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////


Ate (contador > numero)


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

se (contador_divisao > 2) entao
   escreval ("-----------------")
   escreval (numero, " não é primo!")
   escreval ("-----------------")
senao
   escreval ("-----------------")
   escreval (numero, " é primo!")
   escreval ("-----------------")
fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo