algoritmo "semnome"

var

C, N, F: inteiro
R: caractere

inicio

///////////////////////////////////////////////

Repita

   Escreva ("Digite um numero:")
   Leia (N)

///////////////////////////////////////////////

   C <- N
   F <- 1

///////////////////////////////////////////////

   Repita

      F <- F * C
      C <- C - 1

   ate (C < 1)

///////////////////////////////////////////////

   Escreval ("O VALOR DO FATORIAL DE", N , " E IGUAL A", F)
   Escreva ("QUER CONTINUAR? [SIM/NAO]")
   Leia (R)


///////////////////////////////////////////////

   LimpaTela

///////////////////////////////////////////////

ate (R = "NAO")

///////////////////////////////////////////////

fimalgoritmo
