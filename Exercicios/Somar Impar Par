algoritmo "semnome"

var

contador, valor, total, impar:inteiro

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

total <- 0
impar <- 0

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

para contador <- 1 ate 6 faca
   escreval ("DIGITE UM VALOR?")
   leia (valor)
   se (valor >= 0) entao
      total <- total +1
      se (valor%2=1) entao
         impar <- impar + valor
      fimse
   fimse
fimpara

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("AO TODO FORAM", total, " VALORES ENTRE 0 E 10")
escreval ("A SOMA DE IMPARES Ã‰:", impar)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo
