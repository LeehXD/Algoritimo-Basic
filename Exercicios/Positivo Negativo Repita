algoritmo "semnome"

var

contador, numero, negativo, positivo:  inteiro

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

contador <- 1

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

repita

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   escreval ("-----------------")
   escreval ("DIGITE UM NUMERO:")
   escreval ("-----------------")
   leia (numero)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   se (numero < 0)entao
      escreval ("(NEGATIVO)")
      negativo <- negativo + 1
   senao
      escreval ("(POSITIVO)")
      positivo <- positivo +1
   fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   contador <- contador + 1

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

ate (contador > 5)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("----------------------")
escreval (" VALORES NEGATIVOS:", negativo)
escreval ("----------------------")
escreval (" VALORES POSITIVOS:", positivo)
escreval ("----------------------")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo