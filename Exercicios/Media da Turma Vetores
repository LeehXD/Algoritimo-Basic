algoritmo "semnome"

var

nome:vetor  [1..4] de caractere
n1: vetor [1..4] de real
n2: vetor [1..4] de real
media: vetor [1..4] de real
sm, mt: real
i, total: inteiro


inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Para i <- 1 ate 4 faca

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   Escreval ("------------------")
   escreval ("ALUNO", i)
   Escreval ("------------------")
   escreva("NOME:")
   leia (nome[i])

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   Escreval ("------------------")
   escreva ("PRIMEIRA NOTA:")
   Leia (n1[i])

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   Escreval ("------------------")
   escreva("SEGUNDA NOTA:")
   Leia (n2[i])

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   media [i] <- (n1[i]+n2[i])/2
   sm <- sm+ media[i]

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimpara

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

mt <- sm/4

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

limpatela

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Escreval ("------------------")
Escreval ("LISTAGEM DE ALUNOS")
Escreval ("------------------")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Para i <- 1 ate 4 faca

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   escreval (nome[i]: 10, media[i]:4:1)
   Escreval ("------------------")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

   se (media[i] > mt )entao
      total <- total +1
   fimse

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimpara

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("TEMOS", total," ALUNOS ACIMA DA MEDIA QUE Ã‰",mt:4)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo
