algoritmo "semnome"

var

anoatual, nasci, idade: inteiro

inicio

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreva ("Em que ano estamos?")
        Leia (anoatual)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreva ("Em que ano voce nasceu?")
        Leia (nasci)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

idade <- anoatual - nasci

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

escreval ("Voce vai fazer",idade," anos")

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

se (idade>=21) entao
   escreval ("Voce já terá atingido a maior idade")
senao
     escreva ("Voce ainda não atingiu maior idade")
fimSe

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo
